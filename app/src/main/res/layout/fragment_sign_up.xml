<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    tools:context=".LogInFragment"
    android:id="@+id/signInFragment"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/mottomologo"
        android:layout_width="140dp"
        android:layout_height="140dp"
        app:srcCompat="@drawable/mottomologo"
        android:layout_marginTop="120dp"
        android:layout_centerHorizontal="true"
        />

    <!-- <TextView
        android:id="@+id/signInText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="64dp"
        android:layout_marginBottom="64dp"
        android:text="@string/signIn"
        android:textSize="34sp" />
    -->

    <!-- TODO: Update blank fragment layout -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/signInUser"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="56dp"
        android:layout_below="@+id/mottomologo"
        android:layout_centerHorizontal="true"
        android:hint="Usuario">
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:textSize="12sp"
            android:maxLines="1"
            android:maxLength="32"/>
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/signInPassword"
        android:layout_centerHorizontal="true"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:hint="ContraseÃ±a"
        app:endIconMode="password_toggle"
        android:layout_below="@+id/signInUser"
        android:layout_marginTop="16dp">
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:textSize="12sp"
            android:inputType="textPassword"
            android:maxLength="128"/>
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/sign_In_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/signInPassword"
        android:text="Aceptar"
        app:layout_constraintEnd_toEndOf="parent"
        />

</RelativeLayout>