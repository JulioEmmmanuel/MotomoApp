<resources
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >
    <!-- Base application theme. -->
    <style name="Base.Theme.MotomoApp" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorOnPrimary">@color/white</item>

    </style>


    <style name="Title.H1" parent="TextAppearance.MaterialComponents.Headline1">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">30dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginBottom">20dp</item>
        <item name="android:layout_marginTop">50dp</item>
    </style>

    <style name="Title.H2" parent="TextAppearance.MaterialComponents.Headline2">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">25dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Title.H3" parent="TextAppearance.MaterialComponents.Headline3">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">20dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Text" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">18dp</item>
    </style>

    <style name="ButtonHalf" parent="ThemeOverlay.Material3.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18dp</item>
    </style>

    <style name="ButtonFull" parent="ThemeOverlay.Material3.Button">
        <item name="android:layout_width">300dp</item>
        <item name="android:layout_height">55dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:textSize">18dp</item>
    </style>

    <style name="InputLay" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="android:layout_width">320dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">12dp</item>
    </style>

    <style name="EditText" parent="ThemeOverlay.Material3.TextInputEditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:maxLength">32</item>
        <item name="android:maxLines">1</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="roundButton" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="icon">@drawable/back</item>
        <item name="iconSize">20dp</item>
        <item name="iconPadding">0dp</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:padding">0dp</item>
        <item name="android:paddingStart">12dp</item>
        <item name="cornerRadius">100dp</item>
    </style>

    <style name="SplashTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_background</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:statusBarColor">@color/colorAccent</item>
    </style>

    <style name="inputCardMedium" parent="ThemeOverlay.Material3.TextInputEditText">
        <item name="android:layout_width">153dp</item>
        <item name="android:layout_height">56dp</item>
        <item name="android:layout_marginTop">56dp</item>
        <item name="android:layout_marginEnd">32dp</item>
    </style>

    <style name="inputCardSmall" parent="ThemeOverlay.Material3.TextInputEditText">
        <item name="android:layout_width">70dp</item>
        <item name="android:layout_height">56dp</item>
        <item name="android:layout_marginTop">56dp</item>
        <item name="android:layout_marginEnd">32dp</item>
    </style>

    <style name="inputCardLarge" parent="ThemeOverlay.Material3.TextInputEditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">56dp</item>
        <item name="android:layout_marginEnd">32dp</item>
    </style>

    <style name="Theme.MotomoApp" parent="Base.Theme.MotomoApp" />

    <style name="Theme.MotomoApp.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.MotomoApp.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.MotomoApp.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>